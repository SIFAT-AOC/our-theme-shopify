  {
    "name": "collection-list-4",
    "settings": [
       {
               "type":"text",
               "id":"c-l-4-t",
               "label":"add text",
               "default":"add your title here"
            },
      {
  "type": "color",
  "id": "c-l-4-c-2",
  "label": "Title Color",
  "default": "#000000"
}
    ],
    "blocks": [
      {
        "type": "Collection-List-4",
        "name": "Collection",
        "settings": [
          {
            "label": "Collection",
            "id": "collection",
            "type": "collection"
          }, {
  "type": "color",
  "id": "c-l-4-c-1",
  "label": "Title Color",
  "default": "#000000"
}

        ]
      }
    ],
   "presets": [
   {
        "name": "Collection list-4",
        "category": "Collection",
        "blocks": [
          {
            "type": "Collection-List-4"
          }

        ]
      }
  ]


}
