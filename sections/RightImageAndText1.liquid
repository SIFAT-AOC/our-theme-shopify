<style>
  .title-text{
    color:{{section.settings.titilecolor}};
    font-size: 45px;
    font-weight: 660;
    position:relative;
    margin-bottom:60px;
     font-family: poppins;
}
  .watchDes{
  font-family: poppins;
 font-size: 1.8rem;
  }
 
 @media all and (max-width:768px){
    .title-text{
    font-size: 29px;
    font-weight: 660;
    margin-bottom:3rem;
    position:relative;
}
     .watchDes{
  font-family: poppins;
 font-size: 1.5rem;
  }
 } 
</style>
<div class=" pt-md-4 pt-3 pb-3 pb-md-4  px-3 my-lg-5 my-md-4 my-3">
    <div class="row mx-auto"  style=" background-color:{{section.settings.RiTeImColor}};">
       
        <div class="col-md-6 col-12 d-flex flex-column  justify-content-center align-items-center  px-4">
           <img src="{{ section.settings.LeftImage2 | img_url:'' }}" class="w-100 img-fluid" alt="" srcset="">
        </div>
        <div class="col-md-6 col-12 mt-md-5  mt-4 d-flex flex-column justify-content-center align-items-center   align-items-md-{{ section.settings.alignments }}  order-{{ section.settings.imagealign }} px-4">
            <h1 class="   fs-2  mb-2" style=" color:{{section.settings.titilecolor2}};">
              {{ section.settings.left_headeradd }}
            </h1>
          <h1 class="  title-text  ">
              {{ section.settings.left_header2 }}
            </h1>
            <p class=" mt-md-3 m mt-4 watchDes text-md-{{ section.settings.Textalignments }} text-center lh-base"  style=" color:{{section.settings.Descrcolor}};">
              {{ section.settings.des }}
            </p>
         
        </div>
    </div>
   
</div>





{% schema %}
{
   "name":"Right image and text 1",
   "settings":[
        {           
  "type": "image_picker",
  "id": "LeftImage2",
  "label": "image"
   
},
        {           
  "type": "richtext",
  "id": "left_headeradd",
  "label": "Title"
},
        {           
  "type": "richtext",
  "id": "left_header2",
  "label": "header"
},
{
  "type": "text",
  "id": "des",
  "label": "Description"
},
{
  "type": "select",
  "id": "alignments",
  "label": "Content alignment",
  "options": [
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "start",
      "label": "Start"
    }
 
  ],
  "default": "start"
},
{
  "type": "select",
  "id": "Textalignments",
  "label": "Description alignment",
  "options": [
    {
      "value": "center",
      "label": "Center"
    },
    {
      "value": "start",
      "label": "Start"
    }
 
  ],
  "default": "start"
},
    {
  "type": "select",
  "id": "imagealign",
  "label": "Image Position",
  "options": [
    {
      "value": "first",
      "label": "Right"
    },
    {
      "value": "last",
      "label": "Left"
    }
 
  ],
  "default": "first"
},
  {
  "type": "color",
  "id": "titilecolor",
  "label": "Title Color",
  "default": "#000000"
},
  {
  "type": "color",
  "id": "titilecolor2",
  "label": "Title Color",
  "default": "#000000"
},
  {
  "type": "color",
  "id": "Descrcolor",
  "label": "Description Color",
  "default": "#000000"
},
  {
  "type": "color_background",
  "id": "RiTeImColor",
   "label": "Background ",
  "default": "#fff"
}
     
   ],
    "presets":
    [
      {
        "name":"Right Image With Text 1"
      }
    ]
  }
{% endschema %}
