<div class="container mt-4 mb-4">
  <h2 style="text-align:center">{{ section.settings.title }}</h2>
  <div class="row d-flex justify-content-between">
    <div class="col-12 col-lg-8 my-md-3 my-2 order-2 order-md-1">
      <div class="row d-flex justify-content-between row-f-c-3">
        {% assign collection = collections[section.settings.collection] %}

        {% for product in collection.products limit: section.settings.product_limit %}
          <div class="col-md-3 col-6 mb-md-3 mb-2">
            <div class=" ">
              <div class="f-c-li-3-img1">
                <img src="{{ product.featured_image | img_url: 'master' }}" class="w-100 h-100" alt="" srcset="">
              </div>
              <div class="f-c-li-t-3">
                <a href="{{ product.url }}" class="my-md-3 my-2">
                  <h3 style="margin: 0px;">{{ product.title }}</h3>
                </a>

                <span class="pe-3">{{ product.price | money }}</span>

                <p>{{ product.compare_at_price | money }}</p>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="col-12 col-lg-4  my-md-3 my-2 order-1 order-md-2 f-c-li-3-img2">
      <img src="{{ section.settings.customimage | img_url: 'master' }}" class="w-100 h-100" alt="">
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Fetured_collection_3",
  "settings": [
     {
               "type":"text",
               "id":"title",
               "label":"add text",
               "default":"Add Title Here"
            },
    {
             "type":"image_picker",
             "id":"customimage",
             "label":"Add a Custom Image"
          },  {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "product_limit",
      "label": "Product Limit",
      "default": 8,
      "min": 1,
      "max": 12,
      "step": 1
    }
  ],
  "presets":[
    {
      "name": "Featured-Collection-3",
       "category": "Product",
      "settings": {
        "collection": "all",
        "product_limit": 8
      }
    }
  ]
}
{% endschema %}

