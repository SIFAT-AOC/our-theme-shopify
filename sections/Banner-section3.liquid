<style>

  .bannertitle{
    color:{{section.settings.bannerheading}};
    font-size: 80px;
    margin-top: 0;
    margin-bottom: 0;
    line-height: 80px;
  }

  .bigbanner--main  {
   display:flex;
    justify-content:center;
    align-items:center;
    
}
  .bigbanner--main img {
    width: 100%;
}

.mainbannercontainer {
    position: absolute;
    top: 47%;
    left: 10%;
    transform: translateY(-50%);
    width: 80%;
}

.bigbanner--main {
    position: relative;
}



.insidecontentmainone {
    max-width: 500px;
    margin-top: 0px;
}


.insidecontentmainone p {
    font-size: 18px;
    margin-top: 0;
    margin-bottom: 0;
    color:{{section.settings.descolor}};
    font-family: "DM Serif Text",serif;
}
.insidecontentmainone .button:before,.insidecontentmainone .button:after {
    display: none;
}
  @media screen and (max-width:1023px) {
  .insidecontentmainone h2 {
    font-size: 4rem;
     line-height: 38px;
    font-family: "DM Serif Text",serif;
}
     .bigbanner--main img {
    width: 100%;  
}
    .insidecontentmainone p {
    font-size: 20px;
    margin-top: 0;
    margin-bottom: 0;
    font-family: "DM Serif Text",serif;
}
    .insidecontentmainone {
    max-width: 450px;
    margin-top: 0px;
}
      .bigbanner--main img {
    width: 100%;
}

.mainbannercontainer {
    position: absolute;
    top: 35%;
    left: 40px;
    transform: translateY(-50%);
    width: 80%;
}

.bigbanner--main {
    position: relative;
}
  }
  @media screen and (max-width:767px) {
  .insidecontentmainone h2 {
    font-size: 2.2rem;
     line-height: 25px;
    font-family: "DM Serif Text",serif;
}
     .bigbanner--main img {
    width: 100%;  
}
    .insidecontentmainone p {
    font-size: 14px;
  
    font-family: "DM Serif Text",serif;
}
    .insidecontentmainone {
    max-width: 250px;
    margin-top: 0px;
}
      .bigbanner--main img {
    width: 100%;
}

.mainbannercontainer {
    position: absolute;
    top: 38%;
    left: 25px;
    transform: translateY(-50%);
    width: 80%;
}

.bigbanner--main {
    position: relative;
}
  }
</style>


<div class="bigbanner--main">
  <img class="w-100  d-flex justify-content-center align-items-center" src="{{ section.settings.image | img_url: '2048 x 2048' }}">
    <div class="mainbannercontainer">
      <div class="insidemainouut--banner">
        <div class="insidecontentmainone">
        <h2  class="my-md-5 my-3 bannertitle fw-bolder">{{ section.settings.heading }}</h2>
        <p class="my-md-5 my-3">{{ section.settings.description }}</p>
<!--               {% if section.settings.buttontext != blank %}
        <a href="{{ section.settings.button_link }}" class="button button--secondary">{{ section.settings.buttontext }}</a>
          {% endif %}
   -->
        </div>
      </div>
    </div>
  </div>

{% schema %}
  {
    "name": " Banner section 3",
    "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
{
  "type": "text",
  "id": "heading",
  "label": "Heading"
  
},
      {
  "type": "color",
  "id": "bannerheading",
  "label": "Title Color",
  "default": "#000000"
},

{
  "type": "richtext",
  "id": "description",
  "label": "description"
},

            {
  "type": "color",
  "id": "descolor",
  "label": "Description Color",
  "default": "#000000"
},
{
  "type": "richtext",
  "id": "buttontext",
  "label": "buttontext"
},
{
  "type": "url",
  "id": "button_link",
  "label": "Button link"
}
],
    "presets": [
      {
        "name": "Banner section 3",
        "category": "Custom"
      }
    ]
  }
{% endschema %}

