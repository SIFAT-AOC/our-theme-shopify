
{% for block in section.blocks %}
  {% if block.type == 'block-1' %}
    <h2>{{block.settings.title}}</h2>
  {% elsif block.type == 'block-2' %}
    <h3 style="color:red;">{{block.settings.title}}</h3>
  {% endif %}
{% endfor %}







{% schema %}
{
   "name":"Custom Testimonial",
   "settings":[
   
   ],
   "blocks":[
      {
         "type":"block-1",
         "name":"Block-1",
         "settings":[
            {
               "type":"text",
               "id":"title",
               "label":"Author",
               "default":"mycodemagic"
            }
           
         ]
      },
       {
         "type":"block-2",
         "name":"Block-2",
         "settings":[
            {
               "type":"text",
               "id":"title",
               "label":"Author",
               "default":"mycodemagic"
            }
           
         ]
      }
      
   ],
   "presets":[
      {
         "name":"New Testimonials",
         "category":"Text",
         "blocks":[
            {
               "type":"block-1"
            },
           {
               "type":"block-2"
            }
           
          
         ]
       
      }
   ]
}

{% endschema %}