{% case section.settings.grid1 %}
  {% when 2 %}
    {%- assign colsize = 'col-md-6' -%}
  {% when 3 %}
    {%- assign colsize = 'col-md-4' -%}
  {% when 4 %}
    {%- assign colsize = 'col-md-3' -%}
  {% when 5 %}
    {%- assign colsize = 'col-md-20' -%}
  {% when 6 %}
    {%- assign colsize = 'col-md-2' -%}
{% endcase %}



{% assign listcollection = collections[section.settings.collection] %}

<!-- section start here -->
<div class="container">
  <h2 class=" c-l-2-h-s text-center my-md-4 my-3" style="
       text-overflow: ellipsis;
           white-space: nowrap;
           overflow: hidden;">{{ section.settings.c-l-2-h-T }}</h2>
  <div class="row d-flex justify-content-center align-items-center ">
    {% for block in section.blocks %}
      {% case block.settings.grid2 %}
  {% when 3 %}
    {%- assign colsize2 = 'col-3' -%}
  {% when 6 %}
    {%- assign colsize2 = 'col-6' -%}
  {% when 12 %}
    {%- assign colsize2 = 'col-12' -%}
{% endcase %}
      <!-- first column -->
      {%- assign collection = collections[block.settings.collection] -%}

      <div class="{{ colsize}} {{ colsize2 }} collectionGrid">
        <div class="imageContainers w-100 h-75">
          <img src="{{ collection.featured_image | img_url: 'master' }}" class="w-100 h-100" alt="">
        </div>
        <a href="{{collection.url}}" class="text-md-start text-center">
          <h3 class=" c-l-2-p-t">{{ collection.title }}</h3>
        </a>
      </div>
    {% endfor -%}

    <!-- first column end here -->
  </div>

  <!-- row end here -->
</div>
<!-- main section end here -->
