<style>
      /* header text */
    .c-l-2-h-s {
      color:{{section.settings.c-l-2-c-h}};
    }
    /* custom build main container */
  .c-l-6-t-l-2, .c-l-6-t-r-2, .c-l-6-b-l-2, .c-l-6-b-r-2 h2, * h2 {
    width: 100%;
}
    .myContainer {
      max-width: 2400px;
      padding: 0px 210px;
      margin: 0 auto;
    }
    .collectionGrid {
      padding: 25px 15px;
    }
    div,
    .secondHeading {
      display: block;
    }

    .secondHeading {
      color: #a6a6a6;
      text-transform: uppercase;
    }
    .c-l-2-p-t {
      color: {{section.settings.c-l-2-c-t}};
      text-transform: uppercase;
       text-overflow: ellipsis;
           white-space: nowrap;
           overflow: hidden;
    }
    a {
      text-decoration: none;
      background-color: transparent;
    }
    /* image hover effect */

    .imageContainers {
      overflow: hidden;
    }

    .imageContainers img {
      display: block;
    }
    .imageContainers:hover img {
      transform: scale(1.2);
      transition: transform 0.7s ease;
      z-index: 1;
    }
    /* hover effect end */

