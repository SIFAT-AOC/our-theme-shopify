},
        {           
  "type": "text",
  "id": "UniqueHeader1",
  "label": "header",
  "default":"add product header"
},
        {           
  "type": "text",
  "id": "UniqueDescription1",
  "label": "Description",
  "default":"add product Description"
}
    ],
    "blocks":[
      {
      "name":"feature5-block",
        "type":"feature5-block",
        "settings":[
                  {           
  "type": "image_picker",
  "id": "Unique-block-img",
  "label": "image"
},
        {           
  "type": "text",
  "id": "Unique-block-Header1",
  "label": "small header",
  "default":"add product small header"
},
        {           
  "type": "text",
  "id": "Unique-blockDescription1",
  "label": "title",
  "default":"add product title"
}
        ]
      }
    ],
    "presets":[
      {
        "name":"product featuresBenifits 5",
          "blocks":[
                    {
         "type":"feature5-block"
          },
        {
         "type":"feature5-block"
          },
        {
         "type":"feature5-block"
          }
          ]
      }
    ]
  }
